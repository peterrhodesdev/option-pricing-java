<?xml version="1.0"?>
 
<!DOCTYPE suppressions PUBLIC
     "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
     "https://checkstyle.org/dtds/suppressions_1_0.dtd">
 
<suppressions>
  <!-- allow naming to resemble math names -->
  <suppress checks="IndentationCheck" files="."/>
  <suppress checks="LineLengthCheck" files="."/>
  <suppress checks="MemberNameCheck" files="."/>
  <suppress checks="ParameterNameCheck" files="."/>
  <suppress checks="LocalVariableNameCheck" files="."/>
  <suppress checks="MethodNameCheck" files="."/>

  <!-- allow list of parameters to be defined on a single line -->
  <suppress checks="MultipleVariableDeclarationsCheck" files="."/>
  <!-- allow list of parameters to be declared in a logical order -->
  <suppress checks="VariableDeclarationUsageDistanceCheck" files="."/>
</suppressions>
